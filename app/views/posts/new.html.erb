<h2> Submit Link Here: </h2>

<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div class='alert alert-error'>
			<%= @post.errors.full_messages.join("<br/>").html_safe %>
		</div>
	<% end %>	

	<%= f.label :title %>
	<%= f.text_field :title %> 
	<%= f.label :url, "URL" %>
	<%= f.text_field :url %>
	<br/>
	<%= f.submit "Submit a Link" %>
<% end %>